@using GwanjaLoveProto.Models.ViewModels
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="modal fade" id="loginModal">
    <div class="modal-dialog modal-dialog-centered">
        <form asp-controller="Account" asp-action="Login" method="post" class="modal-content site-tertiary-background">
            <div class="modal-header">
                <h2 class="modal-title">Log In</h2>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close" data-bs-target="#loginModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="ReturnUrl" name="returnUrl"/>

                <div class="mb-3" id="emailInput">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" id="#emailLogin" class="form-control" />
                    <div><span asp-validation-for="Email" class="text-danger"></span></div>
                </div>
                <div class="mb-3" id="userNameInput">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" id="#userNameLogin" class="form-control" />
                    <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" id="#userNamePassword" class="form-control" />
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                </div>
                <div class="row">
                    <p>Choose a method to sign in with:</p>
                    <div class="col-sm-12 col-md-6">
                        <label class="form-check-label">Username</label>
                        <input type="radio" asp-for="SignInWithUserName" value="true" id="signInWithUserName" />
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label class="form-check-label">Email</label>
                        <input type="radio" asp-for="SignInWithUserName" value="false" id="signInWithEmail" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="float-left">
                    <label asp-for="RememberMe" class="form-label float-md-start me-2"></label>
                    <input asp-for="RememberMe" type="checkbox" class="form-check" />
                </div>
                <button type="button" asp-controller="Account" asp-action="Register" id="loginRegisterBtn" class="site-secondary-background">Register</button>
                <button class="site-primary-background" type="submit">Log In</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/Login.js"></script>
}