@{
    string? controller =
    ViewContext.RouteData.Values["controller"]?.ToString();
    string? action =
        ViewContext.RouteData.Values["action"]?.ToString();
    ViewData["returnUrl"] = !string.IsNullOrEmpty(controller) && !string.IsNullOrEmpty(action) ? $"/{controller}/{action}" : "/Home/Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GwanjaLoveProto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" asp-href-include="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/CanabisLeafVector.ico" />
</head>
<body>
    <header class="header-style">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom navbar-style fixed-top ps-2">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/ScientistsCheckingHemp.jpg" class="navbar-brand-height" alt="Scientists inspecting a Hemp Leaf with magnifying glasses" />
                GwanjaLoveProto
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" id="homeAnchor">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Product" asp-action="Products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Order" asp-action="Orders">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Service" asp-action="Services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Service" asp-action="KnowledgeBase">Knowledge Base</a>
                    </li>
                </ul>
                <ul class="navbar-nav navbar-welcome">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-link">Hello, @User.Identity.Name
                            <img profile-user="@User.Identity.Name" src="" alt="User Profile Picture" />
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button class="btn btn-link nav-link" type="submit">Log Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register" id="registerBtn">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["returnUrl"]" id="loginBtn">Log in</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3" id="main">
            @RenderBody()
        </main>
    </div>

    <footer class="row border-secondary-top px-2 footer-style rasta-radial-background" id="footer">
        <div class="col-sm-12 col-md-4 border-secondary-end">
            <h6 class="text-success footer-secondary-bottom pb-1">Quick Links</h6>
            <ul class="footer-items">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a>
                </li>
                <li>
                    <a asp-controller="Product" asp-action="Products" class="text-decoration-none">Products</a>
                </li>
                <li>
                    <a asp-controller="Service" asp-action="Services" class="text-decoration-none">Services</a>
                </li>
                <li>
                    <a asp-controller="Order" asp-action="Orders" class="text-decoration-none">Orders</a>
                </li>
                <li>
                    <a asp-controller="Service" asp-action="KnowledgeBase" class="text-decoration-none">Knowledge Base</a>
                </li>
            </ul>
            <span class="text-muted">
                &copy; @DateTime.Now.Year - GwanjaLoveProto
            </span>
        </div>
        <div class="col-sm-12 col-md-4 border-secondary-end footer-style footer-scroll">
            <h6 class="text-success footer-secondary-bottom pb-1">Logos</h6>
            <ul class="footer-items overflow-auto">
                <li>
                    <a href="http://tastypuff.com" target="_blank">
                    <img src="~/images/TastyPuffLogo.jpeg" class="footer-img" alt="TastyPuff Logo" />
                    </a>
                </li>
                <li>
                    <a href="http://www.barneysfarm.com" target="_blank">
                    <img src="~/images/BarneyFarmLogo.png" class="footer-img" alt="Barney's farm Logo"/>
                    </a>
                </li>
                <li>
                    <a href="https://honeypuffofficial.com" target="_blank">
                    <img src="~/images/HoneyPuffLogo.jpeg" class="footer-img" alt="HoneyPuff Logo">
                    </a>
                </li>
                <li>
                    <a href="https://rawthentic.com" target="_blank">
                    <img src="~/images/RawLogo.png" class="footer-img" alt="Raw Smoke Logo">
                    </a>
                </li>
                <li>
                    <a href="https://2fast4buds.com" target="_blank">
                    <img src="~/images/fastbuds.jpg" class="footer-img" alt="2Fast4Buds Logo">
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-sm-12 col-md-4">
            <h6 class="text-success footer-secondary-bottom pb-1">Services & Social Media</h6>
            <ul class="footer-items">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Assistive Growing</a>
                </li>
                <li>
                    <a asp-controller="Product" asp-action="Products" class="text-decoration-none">Grow area setup</a>
                </li>
                <li>
                    <a asp-controller="Service" asp-action="Services" class="text-decoration-none">Harvesting</a>
                </li>
                <li>
                    <a asp-controller="Order" asp-action="Orders" class="text-decoration-none">Orders</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
                </li>
            </ul>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

@RenderSection("scripts", required: false)